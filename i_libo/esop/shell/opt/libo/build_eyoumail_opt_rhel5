## {{{ libkav

build_libkav ()
{
    install_dir_own="kav"

    rm -rf $PATH_INSTALL/$install_dir_own

    $CMD_UNTAR_GZ $PATH_TARBALL/$1 -C $PATH_EXTRACT
    cd $PATH_EXTRACT/$2
    check_return_exit
    $CMD_CHOWN_ROOT *

    cp -r $PATH_EXTRACT/$2 $PATH_INSTALL/$install_dir_own
    check_return_exit

    if test "$OS64"; then
        cd $PATH_INSTALL/$install_dir_own
        check_return_exit
        ln -s lib lib64
        check_return_exit
        cd_pwd
    fi
}

