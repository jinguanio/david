    cd builders/cmake
    check_return_exit
    mkdir build
    check_return_exit
    cd build
    check_return_exit

    CMD_CONFIG=" \
    CFLAGS='-I$PATH_INCLUDE' \
    CPPFLAGS='-I$PATH_INCLUDE' \
    LDFLAGS='-L$PATH_LIB -Wl,-R$PATH_LIB' \
    $CMD_CMAKE \
    -DCMAKE_INSTALL_RPATH_USE_LINK_PATH=TRUE \
    -DCRTMPSERVER_INSTALL_PREFIX=$PATH_INSTALL ../ \
    "
    echo $CMD_CONFIG
    eval $CMD_CONFIG
    check_return_exit

    $CMD_MAKE_J
    check_return_exit

    $CMD_MAKE install
    check_return_exit
}

