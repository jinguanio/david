    --disable-openmp \
    --with-x=no \
    --without-dps \
    --without-djvu \
    --without-fftw \
    --without-fpx \
    --without-gslib \
    --without-gvc \
    --without-jbig \
    --without-lcms \
    --without-lcms2 \
    --without-lqr \
    --without-lzma \
    --without-openexr \
    --without-rsvg \
    --without-webp \
    --without-wmf \
    "

    echo $CMD_CONFIG
    eval $CMD_CONFIG
    check_return_exit

    $CMD_MAKE_J
    check_return_exit

    $CMD_MAKE install
    check_return_exit
}

