{
    $CMD_UNTAR_GZ $PATH_TARBALL/$1 -C $PATH_EXTRACT
    cd $PATH_EXTRACT/$2
    check_return_exit
    $CMD_CHOWN_ROOT *

    CMD_CONFIG=" \
    CPPFLAGS='-I$PATH_INCLUDE' \
    LDFLAGS='-L$PATH_LIB -Wl,-R$PATH_LIB' \
    ./configure \
    --prefix=$PATH_INSTALL \
    --with-memcached=$PATH_BIN/memcached \
